/* 水平间距 */
.content .search-box {
  background-color: #c00000;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 999;
}
.content .history-box {
  padding: 0 5px;
}
.content .history-box .history-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 40px;
  font-size: 13px;
  border-bottom: 1px solid #efefef;
}
.content .history-box .history-list {
  display: flex;
  flex-wrap: wrap;
}
.content .history-box .history-list .uni-tag {
  margin-top: 5px;
  margin-right: 5px;
}
.content .sugg-list {
  padding: 0 5px;
}
.content .sugg-list .sugg-item {
  font-size: 12px;
  padding: 13px 0;
  border-bottom: 1px solid #efefef;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.content .sugg-list .sugg-item .goods-name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-right: 3px;
}

